{
  "name": "oleksii-s",
  "description": "Payload CMS part of personal site",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "yarn copyfiles && yarn build:payload && yarn build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,json,md}": "yarn format"
  },
  "dependencies": {
    "@next/eslint-plugin-next": "^14.2.7",
    "@payloadcms/bundler-webpack": "^1.0.0",
    "@payloadcms/db-mongodb": "^1.7.2",
    "@payloadcms/plugin-cloud": "^3.0.0",
    "@payloadcms/plugin-nested-docs": "^1.0.12",
    "@payloadcms/plugin-redirects": "^1.0.2",
    "@payloadcms/plugin-seo": "^2.3.2",
    "@payloadcms/richtext-lexical": "^0.11.3",
    "@payloadcms/richtext-slate": "^1.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-perfectionist": "^3.2.0",
    "eslint-plugin-react": "^7.35.0",
    "express": "^4.19.2",
    "husky": "^9.1.5",
    "payload": "^2.26.0",
    "payload-code-block-feature": "^0.0.0-alpha.0"
  },
  "devDependencies": {
    "@payloadcms/eslint-config": "^1.1.1",
    "@types/express": "^4.17.9",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^15.2.9",
    "nodemon": "^2.0.6",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@4.4.0"
}
